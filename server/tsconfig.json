{
    "compilerOptions": {
        "target": "es2022",
        "module": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "./src",
        "paths": {
            "@/*": ["*"],
            "@/models/*": ["api/models/*"],
            "@/routes/*": ["api/routes/*"],
            "@/controllers/*": ["api/controllers/*"],
            "@/validations/*": ["api/validations/*"]
        }
    },
    "include": ["src/**/*"]
}
