{
    "compilerOptions": {
        "target": "es2022",
        "module": "ESNext",
        "moduleResolution": "node",
        "rootDir": "./",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "baseUrl": ".", // root of your project
        "allowJs": true, // compile .js files
        "checkJs": true, // enable type checking for .js files
        "outDir": "dist", // optional: if you want to compile
        "noEmit": true, // don't output JS yet
        "paths": {
            "@/*": ["src/*"],
            "@/models/*": ["src/api/models/*"],
            "@/routes/*": ["src/api/routes/*"],
            "@/controllers/*": ["src/api/controllers/*"],
            "@/validations/*": ["src/api/validations/*"]
        }
    },
    "include": ["src/**/*", "api/**/*"], // Include all files in the `src` folder
    "exclude": ["node_modules", "dist"] // Exclude unnecessary folders
}
